<div class="container-fluid col-md-8 col-md-offset-2">
  <h1>Listing buses</h1>
  
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Trademark</th>
          <th>Model</th>
          <th>Capacity</th>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
    
      <tbody>
        <% @buses.each do |bus| %>
          <tr>
            <td><%= bus.trademark %></td>
            <td><%= bus.model %></td>
            <td><%= bus.capacity %></td>
            <td><%= link_to 'Show', bus, class: "btn btn-sm btn-info" %></td>
            <td><%= link_to 'Edit', edit_bus_path(bus), class: "btn btn-sm btn-primary" %></td>
            <td><%= link_to 'Destroy', bus, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
            <% if bus.bus_driver.nil? %>
              <td><%= link_to 'Add bus driver', new_bus_bus_driver_path(bus) %></td>
            <% else %>
            <td><%= link_to 'Edit bus driver', edit_bus_bus_driver_path(bus.bus_driver) %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>
  
  <%= link_to 'New Bus', new_bus_path, class: "btn btn-sm btn-success" %>
</div>
