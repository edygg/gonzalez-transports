<div class="container-fluid">
  <div class="col-md-8 col-md-offset-2">
    <div class="table-responsive">
      <h1>Listing schedules</h1>

      <table class="table table-hover">
        <thead>
          <tr>
            <th>Departure City</th>
            <th>Arrival City</th>
            <th>Departure time</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @schedules.each do |schedule| %>
            <tr>
              <td><%= schedule.departure_city.name %></td>
              <td><%= schedule.arrival_city.name %></td>
              <td><%= schedule.departure_time %></td>
              <td><%= link_to 'Show', schedule, class: "btn btn-sm btn-primary" %></td>
              <td><%= link_to 'Edit', edit_schedule_path(schedule), class: "btn btn-sm btn-info" %></td>
              <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Schedule', new_schedule_path, class: "btn btn-success" %>
    </div>
  </div>
</div>