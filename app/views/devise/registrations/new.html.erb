<div id="main-container">
  <div class="container">
    <div class="col-md-6 col-md-offset-3">
      <h2>Sign up</h2>

      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :class => "form-horizontal") do |f| %>
        <%= devise_error_messages! %>
        
        <%= content_tag(:div, class: "row form-group") do %>
          <div class = "input-group input-group-lg">
            <span class="input-group-addon"><i class="fa fa-male"></i> <i class="fa fa-female"></i></span>
            <%= f.text_field :name, class: "form-control", autofocus: true, placeholder: "Name" %>
          </div>
        <% end %>
        
        <div class="row form-group">
          <div class="input-group input-group-lg">
            <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
            <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
          </div>
        </div>
        
        <div class="row form-group">
          <div class="input-group input-group-lg">
            <span class="input-group-addon"><i class="fa fa-check-circle"></i></span>
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
          </div>
        </div>
        
        <div class="row form-group">
          <div class="input-group input-group-lg">
            <span class="input-group-addon"><i class="fa fa-check-circle-o"></i></span>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password confirmation" %>
          </div>
        </div>
      
        <div class="row form-group">
          <div class="input-group input-group-lg">
            <span class="input-group-addon"><i class="fa fa-mobile"></i></span>
            <%= f.telephone_field :phone, class: "form-control", placeholder: "Phone" %>
          </div>
        </div>
      
        <div class="row form-group">
          <div class="input-group input-group-lg">
            <span class="input-group-addon"><i class="fa fa-plane"></i></span>
            <%= f.text_area :address, class: "form-control", placeholder: "Address" %>
          </div>
        </div>
        
        <%= f.submit "Sign up", class: "btn btn-lg btn-block btn-primary" %>
      <% end %>
    </div>
  </div>
</div>