=background_size($size)
  -webkit-background-size: $size
  -moz-background-size: $size
  -o-background-size: $size
  background-size: $size

=respond_to($val, $query)
  @media ($val: $query)
    @content

#main-container
  width: 100%
  height: 100%
  background: url(<%= asset_path('bg.jpg') %>)
  +background_size(cover)
  
#login-container
  +background_size(cover)
  position: absolute
  left: 25%
  top: 25%
  +respond_to(max-width, 1024px)
    left: 20%
  +respond_to(max-width, 991px)
    left: 0
    top: 2%
    position: relative
    margin: 0 auto

#logo-image
  margin: 0 auto
    
#login-form
  text-align: center
  